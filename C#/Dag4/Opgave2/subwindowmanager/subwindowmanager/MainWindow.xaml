<Window x:Class="subwindowmanager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded"
        Name="MainWin" >
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="181*"/>
      <ColumnDefinition Width="337*"/>
    </Grid.ColumnDefinitions>
    <ListBox Name="lBoxCars" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch"/>
    <StackPanel Grid.Column="1" Margin="5">
      <Button Name="btnShowImage" Width="125" Content="Show image" HorizontalAlignment="Left" Margin="0,0,0,10" Click="btnShowImage_Click" />
      <Button Name="btnShowSpec" Width="125" Content="Show specifications" HorizontalAlignment="Left" Margin="0,0,0,10" Click="btnShowSpec_Click" />
      <Button Name="btnClearSelection" Width="125" HorizontalAlignment="Left" Content="ClearSelection" Click="btnClearSelection_Click"/>
    </StackPanel>
  </Grid>
</Window>
