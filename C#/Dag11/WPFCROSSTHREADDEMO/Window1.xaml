<Window x:Class="WpfCrossThreadDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="589" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="88*" />
            <RowDefinition Height="218*" />
        </Grid.RowDefinitions>
        <TextBox Margin="5" Name="textBox1" />
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <StackPanel Margin="0" Name="stackPanel1" Orientation="Horizontal" VerticalAlignment="Top">
                <Button Height="23" Name="button1" Width="75" Click="button1_Click" Margin="5">Fra GUI</Button>
                <Button Height="23" Name="button2" Width="75" Click="button2_Click" Margin="5">Forkert</Button>
                <Button Height="23" Name="button3" Width="75" Click="button3_Click" Margin="5">Korrekt</Button>
            </StackPanel>
    </StackPanel>
    </Grid>
</Window>
